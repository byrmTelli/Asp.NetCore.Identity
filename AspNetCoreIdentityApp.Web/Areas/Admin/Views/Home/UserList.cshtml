@{
    ViewData["Title"] = "SignUp";
}
@model List<AdminModel.UserViewModel>


<h1>UserList Page</h1>


<table class="table table-striped">
   <thead>
       <tr>
           <th>Id</th>
           <th>Username</th>
           <th>Email</th>
           <th></th>
           <th>Role İşlemleri</th>
       </tr>
   </thead>
   <tbody>
       @foreach(var item in Model){
            <tr>
                <td>@item.UserId</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>
                    <user-role-names user-id="@item.UserId" class="mx-1"></user-role-names>
                </td>
                <td>
                    <a asp-area="admin" asp-controller="roles" asp-action="AssignRoleToUser" asp-route-id="@item.UserId" class="btn btn-warning">Role Ata</a>
                </td>
            </tr>
        }

   </tbody>
</table>