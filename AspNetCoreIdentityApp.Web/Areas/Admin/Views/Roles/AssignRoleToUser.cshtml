
@{
    ViewData["Title"] = "AssingnRoleToUser";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model List<AdminModel.AssignRoleToUserViewModel>

<div class="row">
    <div class="col-md-6 offset-md-3">
        @if (ViewData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @ViewData["SuccessMessage"]
            </div>
        }
        <h2>Kullanıcıya Role Atama</h2>
        <form asp-action="AssignRoleToUser" asp-route-userId="@ViewBag.userId">

            @for(int i =0; i<Model.Count; i++)
            {
                
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" asp-for="@Model[i].RoleExist" />
                    <label class="form-check-label">@Model[i].Name</label>
                    <input type="hidden" asp-for="@Model[i].Name" />
                    <input type="hidden" asp-for="@Model[i].Id"/>
                </div>


            }
            <div class="form-group">
                <input type="submit" value="Role Ata" class="btn btn-warning"/>
             </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="userlist">Back to List</a>
</div>

