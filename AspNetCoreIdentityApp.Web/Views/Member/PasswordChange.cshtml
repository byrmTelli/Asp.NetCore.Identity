
@{
    ViewData["Title"] = "PasswordChange";
}


@section Scripts
{

    @await Html.PartialAsync("_ValidationScriptsPartial");

}

@model PasswordChangeViewModel

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>Şifre Değiştir</h1>
        <div class="alert alert-danger" asp-validation-summary=ModelOnly role="alert">
        </div>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        <form asp-controller="Member" asp-action="PasswordChange" method="post">
            <div class="row mb-3">
                <label asp-for="PasswordOld" class="col-md-4 col-form-label"></label>
                <div class="col-md-8">
                    <input type="password" class="form-control" asp-for="PasswordOld">
                    <span class="text-danger" asp-validation-for="PasswordOld"></span>
                </div>
            </div>
   
            <div class="row mb-3">
                <label asp-for="Password" class="col-md-4 col-form-label"></label>
                <div class="col-md-8">
                    <input type="password" class="form-control" asp-for="Password">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="ConfirmPassword" asp-for="ConfirmPassword" class="col-md-4 col-form-label"></label>
                <div class="col-md-8">
                    <input class="form-control" asp-for="ConfirmPassword" autocomplete="off">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>