
@{
    ViewData["Title"] = "UserEdit";
}

@section Scripts
{

    @await Html.PartialAsync("_ValidationScriptsPartial");

}

@model UserEditViewModel

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>Şifre Değiştir</h1>
        <div class="alert alert-danger" asp-validation-summary=ModelOnly role="alert">
        </div>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        <form asp-controller="Member" asp-action="UserEdit" method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label asp-for="UserName" class="col-md-4 col-form-label"></label>
                <div class="col-md-8">
                    <input class="form-control" asp-for="UserName">
                    <span class="text-danger" asp-validation-for="UserName"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="Email" class="col-md-4 col-form-label"></label>
                <div class="col-md-8">
                    <input class="form-control" asp-for="Email">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Phone" class="col-md-4 col-form-label"></label>
                <div class="col-md-8">
                    <input class="form-control" asp-for="Phone" autocomplete="off">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="BirthDate" class="col-md-4 col-form-label"></label>
                <div class="col-md-8">
                    <input class="form-control" asp-for="BirthDate" autocomplete="off">
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Picture" class="col-md-4 col-form-label"></label>
                <div class="col-md-8">
                    <input class="form-control" type="file" asp-for="Picture" autocomplete="off">
                    <span asp-validation-for="Picture" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="City" class="col-md-4 col-form-label"></label>
                <div class="col-md-8">
                    <input class="form-control" asp-for="City" autocomplete="off">
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Gender" class="col-md-4 col-form-label"></label>
                <div class="col-md-8">
                    <Select class="form-control" asp-for="Gender" asp-items="ViewBag.genderList">
                        <option value="">Cinsiyet Seçiniz</option>
                    </Select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Güncelle</button>
        </form>
    </div>
</div>

